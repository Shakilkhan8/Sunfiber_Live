<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="product_barcode_template_id">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <div class="page">

                        <div class="container">
                            <div class="row">
                                <div class="col-12 text-left">
                                    <div class="row">
                                        <div class="col-12 text-center">
                                            <h6 style="font-style:bold;  font-size:30px; font-family: 'Times New Roman', Times, serif;">
                                                <t t-esc="product_name"/>
                                            </h6>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 text-left">
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', barcode, 600, 200)"
                                                 style="width:1300px;height:200px; margin-left:-250px"/>
                                        </div>
                                    </div>
                                    <p style="margin-left:0px; text-align:center; font-size:30px;">
                                        <t t-esc="barcode"/>
                                    </p>
                                    <p style="font-style: underline;font-size:25px; margin-left:300px">
                                        SUN FIBER (PVT) Ltd
                                    </p>
                                    <p style="font-style: underline;font-size:25px; margin-left:350px">
                                        UNIT - 2 FSB
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </t>
            </t>

        </template>

    </data>
</odoo>
